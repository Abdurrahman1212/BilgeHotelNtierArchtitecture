@using Models.Enums
@model Reservation

@{
    ViewData["Title"] = "EditReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title" style="background-image: url(../../images/background/page-title-bg.png);">
    <div class="auto-container">
        <div class="title-outer text-center">
            <h1 class="title">Reservasyonunuzu Guncelleyin</h1>
            <ul class="page-breadcrumb">
                <li><a href="/Home">Anasayfa</a></li>
                <li>Reservasyonunuzu Guncelleyin</li>
            </ul>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Rezervasyon Güncelleme</h4>
            </div>
            <div class="card" id="editReservation">
                <h5 class="card-header">Rezervasyon Güncelle</h5>
                <form asp-action="Edit" class="card-body" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">

                        <div class="form-group col-6 p-2">
                            <label asp-for="CustomerId" class="id"></label>
                            <input asp-for="CustomerId" class="form-control" readonly />
                            <span asp-validation-for="CustomerId" class="read-more"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="CheckInDate" class="control-label"></label>
                            <input asp-for="CheckInDate" class="form-control" />
                            <span asp-validation-for="CheckInDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="CheckOutDate" class="control-label"></label>
                            <input asp-for="CheckOutDate" class="form-control" />
                            <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="RoomId" class="control-label"></label>
                            <input asp-for="RoomId" class="form-control" readonly />
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="PaymentMethod" class="control-label"></label>
                            <select asp-for="PaymentMethod" class="form-control @(ViewData.ModelState["PaymentMethod"]?.Errors.Count > 0 ? "is-invalid" : "")" asp-items="Html.GetEnumSelectList<Models.Enums.PaymentMethod>()" required>
                                <option value="">-- Payment Method --</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="MasterId" class="id"></label>
                            <input asp-for="MasterId" class="form-control" readonly />
                            <span asp-validation-for="MasterId" class="read-more"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="CreatedDate" class="control-label"></label>
                            <input asp-for="CreatedDate" class="form-control" readonly />
                            <span asp-validation-for="CreatedDate" class="read-more"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="EntryDate" class="control-label"></label>
                            <input asp-for="EntryDate" class="form-control" readonly />
                            <span asp-validation-for="EntryDate" class="read-more"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 p-2">
                            <label asp-for="UpdatedDate" class="control-label"></label>
                            <input asp-for="UpdatedDate" class="form-control" readonly />
                            <span asp-validation-for="UpdatedDate" class="read-more"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="UpdatedComputerName" class="control-label"></label>
                            <input asp-for="UpdatedComputerName" class="form-control" readonly />
                            <span asp-validation-for="UpdatedComputerName" class="read-more"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="PackageType" class="control-label"></label>
                            <select asp-for="PackageType" class="form-control" asp-items="Html.GetEnumSelectList<Models.Enums.PackageType>()" required>
                                <option value="">--Select Type --</option>
                            </select>
                            <span asp-validation-for="PackageType" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="TotalAmount" class="control-label"></label>
                            <input asp-for="TotalAmount" class="form-control" />
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2">
                            <label asp-for="ReservationStatus" class="control-label"></label>
                            <select asp-for="ReservationStatus" class="form-control" asp-items="Html.GetEnumSelectList<Models.Enums.ReservationStatus>()" required>
                                <option value="">-- Select Type --</option>
                            </select>
                            <span asp-validation-for="ReservationStatus" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="pt-6" style="text-align:end;">
                        <button type="reset" class="btn btn-outline-secondary waves-effect">@Html.ActionLink("Iptal", "Index", "Reservations")</button>
                        <button type="submit" class="btn btn-primary me-4 waves-effect waves-light" asp-action="Edit" asp-route-id="@Model?.Id">Kaydet</button>
                    </div>
                </form>
            </div>

                    <!-- Hidden fields -->
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="MasterId" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="EntryDate" />
                    <input type="hidden" asp-for="UpdatedDate" />
                    <input type="hidden" asp-for="UpdatedComputerName" />

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Güncelle
                                </button>
                            </div>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>
</div>


