@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start main-content -->
<section class="page-title" style="background-image: url(../../images/background/page-title-bg.png);">
    <div class="auto-container">
        <div class="title-outer text-center">
            <h1 class="title">Pricing</h1>
            <ul class="page-breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li><a href="#">Pages</a></li>
                <li>Pricing</li>
            </ul>
        </div>
    </div>
</section>
<!-- end main-content -->
<section class="room-service-section pt-120 pb-60">
    <div class="auto-container">
        <div class="row">
<form method="post" asp-action="Login" asp-controller="Account">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2>Login</h2>
            </div>
            <div class="card-body">
                <div>
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName"></span>
                    <input class="form-control" asp-for="UserName" />
                </div>
                <div>
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                    <input type="password" class="form-control" asp-for="Password" />
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Login</button>
            </div>
        </div>
    </div>
</form>
</div></div></section>