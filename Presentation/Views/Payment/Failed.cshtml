@{
    ViewData["Title"] = "Ödeme Başarısız";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-times-circle me-2"></i>
                        Ödeme Başarısız
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h4 class="text-danger mb-3">Ödeme İşlemi Tamamlanamadı</h4>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <strong>Hata:</strong> @ViewBag.ErrorMessage
                        </div>
                    }
                    
                    <p class="text-muted mb-4">
                        Ödeme işlemi sırasında bir hata oluştu. Lütfen bilgilerinizi kontrol edip tekrar deneyiniz.
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a href="javascript:history.back()" class="btn btn-primary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>
                            Geri Dön
                        </a>
                        
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>
                            Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
