@{
    ViewData["Title"] = "Ödeme Başarılı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>
                        Ödeme Başarılı!
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h4 class="text-success mb-3">Ödemeniz Başarıyla Tamamlandı</h4>
                    
                    <div class="alert alert-success">
                        <strong>Ödeme ID:</strong> @ViewBag.PaymentId
                    </div>
                    
                    <p class="text-muted mb-4">
                        Rezervasyonunuz onaylanmıştır. E-posta adresinize onay belgesi gönderilecektir.
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Ana Sayfaya Dön
                        </a>
                        
                        <a href="@Url.Action("Index", "Reservation")" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>
                            Rezervasyonlarım
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
