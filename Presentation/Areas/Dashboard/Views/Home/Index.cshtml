@using Presentation.Areas.Dashboard.Controllers
@model List<Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout2.cshtml";

}

<div class="row">
    <div class="col-md-12 col-xxl-8">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-md-6 order-2 order-md-1">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Hoşgeldin <span class="fw-bold">@User.Identity.Name</span> 🎉</h4>
                        <p class="mb-0">Toplam @ViewBag.TotalReservations rezervasyon bekliyor.</p>
                        <p></p>
                        <a href="javascript:;" class="btn btn-primary waves-effect waves-light">Profil Görüntüleme</a>
                    </div>
                </div>
                <div class="col-md-6 text-center text-md-end order-1 order-md-2">
                    <div class="card-body pb-0 px-0 pt-2">
                        <img src="/assets/img/illustrations/illustration-john-light.png" height="186" class="scaleX-n1-rtl" alt="View Profile" data-app-light-img="illustrations/illustration-john-light.png" data-app-dark-img="illustrations/illustration-john-dark.png" style="visibility: visible;">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-xxl-4">
        <div class="card h-100">
            <div class="d-flex align-items-end row">
            <div class="card-body row">
                <div class="col-6">
                    <h4 class="d-block card-title">Toplam Oda</h4>
                        <div class="d-flex align-items-center mb-1 flex-wrap">
                            <h5 class="mb-0 me-1">@ViewBag.RoomCount</h5>
                            <p class="mb-0 text-success">+62%</p>
                        </div>
                </div>
                <div class="col-6 text-center text-md-end order-1 order-md-2">
                    <img src="/assets/img/illustrations/pricing-standard.png" height="150" class="scaleX-n1-rtl" alt="View Profile" data-app-light-img="illustrations/pricing-standard.png" data-app-dark-img="illustrations/pricing-standard.png" style="visibility: visible;">
                </div>
            </div>
        </div>
        </div>
    </div>
</div>


<!-- Total Transactions & Report Chart -->
<div class="col-10 col-xxl-6">
    <div class="card h-100">
        <div class="row row-bordered g-0 h-100">
            <div class="col-md-7 col-12 order-2 order-md-0">
                <div class="card-header">
                    <h5 class="mb-0">Total Transactions</h5>
                </div>
                <div class="card-body">
                    <div id="totalTransactionChart"></div>
                </div>
            </div>
            <div class="col-md-5 col-12">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h5 class="mb-1">Report</h5>
                        <div class="dropdown">
                            <button class="btn btn-text-secondary rounded-pill text-muted border-0 p-1" type="button" id="totalTransaction" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ri-more-2-line ri-20px"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="totalTransaction">
                                <a class="dropdown-item" href="javascript:void(0);">Refresh</a>
                                <a class="dropdown-item" href="javascript:void(0);">Share</a>
                                <a class="dropdown-item" href="javascript:void(0);">Update</a>
                            </div>
                        </div>
                    </div>
                    <p class="mb-0 card-subtitle">Last month transactions $234.40k</p>
                </div>
                <div class="card-body pt-6">
                    <div class="row">
                        <div class="col-6 border-end">
                            <div class="d-flex flex-column align-items-center">
                                <div class="avatar">
                                    <div class="avatar-initial bg-label-success rounded-3">
                                        <div class="ri-pie-chart-2-line ri-24px"></div>
                                    </div>
                                </div>
                                <p class="mt-3 mb-1">This Week</p>
                                <h6 class="mb-0">+82.45%</h6>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex flex-column align-items-center">
                                <div class="avatar">
                                    <div class="avatar-initial bg-label-primary rounded-3">
                                        <div class="ri-money-dollar-circle-line ri-24px"></div>
                                    </div>
                                </div>
                                <p class="mt-3 mb-1">This Week</p>
                                <h6 class="mb-0">-24.86%</h6>
                            </div>
                        </div>
                    </div>
                    <hr class="my-5">
                    <div class="d-flex justify-content-around align-items-center flex-wrap gap-2">
                        <div>
                            <p class="mb-1">Performance</p>
                            <h6 class="mb-0">+94.15%</h6>
                        </div>
                        <div>
                            <button class="btn btn-primary" type="button">view report</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ Total Transactions & Report Chart -->
<div class="col-xxl-6">
<!-- Statistics Total Order -->
    <div class="col-12">
    <div class="card h-50">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                <div class="avatar">
                    <div class="avatar-initial bg-label-primary rounded-3">
                        <i class="ri-shopping-cart-2-line ri-24px"></i>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <p class="mb-0 text-success me-1">+22%</p>
                    <i class="ri-arrow-up-s-line text-success"></i>
                </div>
            </div>
            <div class="card-info mt-5">
                <h5 class="mb-1">155k</h5>
                <p>Total Orders</p>
                <div class="badge bg-label-secondary rounded-pill">Last 4 Month</div>
            </div>
        </div>
    </div>
</div>
<!--/ Statistics Total Order -->
<!-- Sessions line chart -->
<div class="col-12 mt-5">
    <div class="card h-50">
        <div class="d-flex align-items-end row">
        <div class="card-body row">
            <div class="col-7">
                <h4 class="d-block card-title">Toplam Çalışan</h4>
                <div class="d-flex align-items-center mb-1 flex-wrap">
                    <h5 class="mb-0 me-1">@ViewBag.EmployeeCount</h5>
                    <p class="mb-0 text-success">+62%</p>
                </div>
            </div>
            <div class="col-5 text-center text-md-end order-1 order-md-2">
                <img src="/assets/img/illustrations/illustration-upgrade-account.png" height="150" class="scaleX-n1-rtl" alt="View Profile" data-app-light-img="illustrations/illustration-upgrade-account.png" data-app-dark-img="illustrations/illustration-upgrade-account.png" style="visibility: visible;">
            </div>
        </div>
        </div>
    </div>
</div>
<!--/ Sessions line chart -->
</div>