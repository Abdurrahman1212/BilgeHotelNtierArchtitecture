@model Models.Entities.Shift
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout2.cshtml";
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeList">
            <option value="">--SelectId--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ShiftType"></label>
        <select asp-for="ShiftType" class="form-control" asp-items="Html.GetEnumSelectList<Models.Enums.ShiftType>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="ShiftDate"></label>
        <input asp-for="ShiftDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>    ViewBag.EmployeeList = new SelectList(_context.Employees, "Id", "FullName");
