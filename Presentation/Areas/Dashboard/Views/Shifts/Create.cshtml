@model Models.Entities.Shift

@{
    ViewData["Title"] = "Vardiya Oluştur";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout2.cshtml";
}

<div class="card" id="createShift">
    <h5 class="card-header">Vardiya Oluştur</h5>
    <form asp-action="Create" class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row" style="align-items:center">
            <div class="form-group col-6 p-2">
                <label asp-for="ShiftType" class="control-label"></label>
                <select asp-for="ShiftType" class="form-control"></select>
                <span asp-validation-for="ShiftType" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="MasterId" class="control-label"></label>
                <input asp-for="MasterId" class="form-control" />
                <span asp-validation-for="MasterId" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="EntryDate" class="control-label"></label>
                <input asp-for="EntryDate" class="form-control" />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="SelectedStatus" class="control-label"></label>
                <select asp-for="SelectedStatus" class="form-control"></select>
                <span asp-validation-for="SelectedStatus" class="text-danger"></span>
            </div>
            <div class="form-group col-6 p-2">
                <label asp-for="UpdatedComputerName" class="control-label"></label>
                <input asp-for="UpdatedComputerName" class="form-control" />
                <span asp-validation-for="UpdatedComputerName" class="text-danger"></span>
            </div>
        </div>
        <div class="pt-6" style="text-align:end;">
            <button type="reset" class="btn btn-outline-secondary waves-effect" asp-action="Index">İptal</button>
            <button type="submit" class="btn btn-primary me-4 waves-effect waves-light" asp-action="Create">Kaydet</button>
        </div>
    </form>
</div>