@model Room
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Create Room</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div>
                        <label>RoomNumber</label>
                        <input type="text" class="form-control" asp-for="RoomNumber" />
                    </div>
                    <div>
                        <label>Room Name </label>
                        <input type="text" cols="5" rows="7" class="form-control" asp-for="RoomType">

                        </>
                    </div>
                    <button class="btn btn-primary mt-2">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

